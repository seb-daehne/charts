{
    "enabledManagers" : ["regex"],

    "regexManagers": [
      {
        "fileMatch": ["^.*/Chart.yaml$"],
        "datasourceTemplate": "docker",
        "autoReplaceStringTemplate": "depName='{{{depName}}}'\nappVersion: \"{{{newValue}}}\"",
        "matchStrings": [
            "depName: (?<depName>.*?)\\sdatasource: (?<datasource>.*?)\\sappVersion: \"(?<currentValue>.*)\"\\s"
          ]
      }
    ],

    "packageRules": [
        {
          "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
          "automerge": false
        }
    ]
  }