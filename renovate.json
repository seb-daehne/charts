{
    "regexManagers": [
      {
        "fileMatch": ["^.*/Chart.yaml$"],
        "datasourceTemplate": "docker",
        "autoReplaceStringTemplate": "depName=\"{{{depName}}}\"\nappVersion: \"{{{newValue}}}\"",
        "matchStrings": [
            "depName: \"(?<depName>.*?)\"\\sappVersion: \"(?<currentValue>.*)\"\\s"
          ]
      }
    ],

    "packageRules": [
        {
          "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
          "automerge": false
        }
    ]
  }