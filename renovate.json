{
    "extends": ["config:base"],

    "regexManagers": [
      {
        "fileMatch": ["^.*/Chart.yaml$"],
        "matchStrings": [
            "datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\sappVersion: ?.(?<currentValue>.*).\\s"
          ]
      }
    ],

    "packageRules": [
        {
          "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
          "automerge": true
        }
    ]
  }