{
    "extends": ["config:base"],
    "ignorePaths": ["docker/old-files/"],

    "regexManagers": [
      {
        "fileMatch": ["^.*/Chart.yaml$"],
        "matchStrings": [
            "datasource=(?<datasource>.*?) depName=(?<depName>.*?)\nappVersion: ?\"(?<currentValue>.*)\"\n"
          ],
        "datasourceTemplate": "docker"
      }
    ],

    "packageRules": [
        {
          "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
          "automerge": true
        }
    ]
  }